<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background480x800"
     >

    <ToggleButton
        android:id="@+id/toggle_autoLogOn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:fontFamily="Roboto"
        android:gravity="left"
        android:paddingTop="35dp"
        android:text="@string/settings_autologon"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggle_autoLogOn"
        android:layout_marginTop="26dp"
        android:text="@string/settings_about" />
    <TextView
        android:id="@+id/textview_currentuser"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#000000"
        android:text="@string/mainmenu_user"
        android:textColor="#999999" />

</RelativeLayout>