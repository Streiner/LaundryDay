<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qudgar.laundryday"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />
	<uses-permission 
	    android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/everywhere_title"
        android:debuggable="true">
        <activity
            android:name="com.qudgar.laundryday.MainMenu"
            android:label="@string/everywhere_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qudgar.laundryday.LogIn"
            android:label="@string/everywhere_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qudgar.laundryday.MyBookedTimes"
            android:label="@string/everywhere_title" >
        </activity>
        <activity
            android:name="com.qudgar.laundryday.Reminders"
            android:label="@string/everywhere_title" >
        </activity>
        <activity
            android:name="com.qudgar.laundryday.RoomMenu"
            android:label="@string/everywhere_title" >
        </activity>
          <activity
            android:name="com.qudgar.laundryday.BookRoom"
            android:label="@string/everywhere_title" >
        </activity>
    </application>

</manifest>